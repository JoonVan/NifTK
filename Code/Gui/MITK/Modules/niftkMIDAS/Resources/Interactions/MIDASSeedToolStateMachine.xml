<stateMachine>
  <state name="start" startstate="true">
    <transition event_class="MousePressEvent" event_variant="MiddleButtonPressed" target="guardMiddleButtonPointSelected">
      <!-- 30 = AcCHECKELEMENT  -->
      <action name="checkElement" />
    </transition>
    <!-- middle button down move -->
    <transition event_class="MouseMoveEvent" event_variant="MiddleButtonPressedAndMove" target="guardMiddleButtonPointSelected">
      <!-- 30 = AcCHECKELEMENT  -->
      <action name="checkElement" />
    </transition>
    <transition event_class="MousePressEvent" event_variant="LeftButtonPressed" target="guardLeftButtonPointSelected">
      <!-- 30 = AcCHECKELEMENT  -->
      <action name="checkElement" />
    </transition>
    <!-- left button down move -->
    <transition event_class="MouseMoveEvent" event_variant="LeftButtonPressedAndMove" target="start">
      <!-- 91 = AcMOVESELECTED  -->
      <action name="moveSelected" />
    </transition>
    <!--left up-->
    <transition event_class="MouseLeftEvent" event_variant="LeftButtonReleased" target="start">
      <!-- 42 = AcFINISHMOVEMENT  -->
      <action name="finishMovement" />
      <!-- 72 = AcDESELECTALL  -->
      <action name="deselectAll" />
    </transition>
  </state>
  <!--state name="guardMiddleButtonPointSelected">
    <transition event_class="no" event_variant="1003" target="start">
      <!- - 0 = AcDONOTHING - ->
      <action name="doNothing" />
    </transition>
    <transition event_class="yes" event_variant="1004" target="start">
      <!- - 100 = AcREMOVEPOINT - ->
      <action name="removePoint" />
      <!- - 72 = AcDESELECTALL  - ->
      <action name="deselectAll" />
    </transition>
  </state>
  <state name="guardLeftButtonPointSelected">
    <transition event_class="no" event_variant="1003" target="start">
      <!- - 0 = AcDONOTHING - ->
      <action name="doNothing" />
    </transition>
    <transition event_class="yes" event_variant="1004" target="start">
      <!- - 8 = AcINITMOVEMENT - ->
      <action name="initMovement" />
      <!- - 60 = AcSELECTPICKEDOBJECT - ->
      <action name="selectPickedObject" />
    </transition>
  </state-->
</stateMachine>
