<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Laparoscopic Demo</category>
  <title>Ultrasound Invariant Point Calibration</title>
  <description><![CDATA[Calibrates an US probe using a Single Pin method.]]></description>
  <version>@NIFTK_VERSION_STRING@</version>
  <documentation-url>http://cmic.cs.ucl.ac.uk/platform/niftk/current/html/index.html</documentation-url>
  <license>@NIFTK_COPYRIGHT@ @NIFTK_LICENSE_SHORT_STRING@</license>
  <contributor>Matt Clarkson</contributor>
  <acknowledgements><![CDATA[]]></acknowledgements>

  <parameters>
    <label>IO</label>
    <description><![CDATA[Input/output parameters]]></description>
    <directory>
      <name>matrixDirectory</name>
      <longflag>matrixDirectory</longflag>
      <description>Directory containing 4x4 tracking matrices in plain text files.</description>
      <label>Matrix Directory</label>
    </directory>
    <directory>
      <name>pointDirectory</name>
      <longflag>pointDirectory</longflag>
      <description>Directory containing 2D point locations in plain text files.</description>
      <label>Points Directory</label>
    </directory>
    <file fileExtensions=".txt,.4x4">
      <name>outputMatrixFile</name>
      <longflag>outputMatrixFile</longflag>
      <description>Output matrix filename.</description>
      <label>Output Matrix</label>
      <default>calib.4x4</default>
      <channel>output</channel>
    </file>
  </parameters>

  <parameters>
    <label>Optional Parameters</label>
    <description><![CDATA[Additional parameters]]></description>
    <boolean>
      <name>optimiseScaling</name>
      <longflag>optimiseScaling</longflag>
      <description>Optimise the scale parameters.</description>
      <label>Optimise Scaling</label>
      <default>false</default>
      <channel>input</channel>
    </boolean>
    <float-vector>
      <name>millimetresPerPixel</name>
      <longflag>millimetresPerPixel</longflag>
      <description>Initial millimetres per pixel</description>
      <label>Millimetres/Pixel</label>
      <default>1,1</default>
      <channel>input</channel>
    </float-vector>
    <boolean>
      <name>optimiseInvariantPoints</name>
      <longflag>optimiseInvariantPoints</longflag>
      <description>Optimise the position of the invariant points.</description>
      <label>Optimise Invariant Points</label>
      <default>false</default>
      <channel>input</channel>
    </boolean>
    <point>
      <name>invariantPoint1</name>
      <longflag>invariantPoint1</longflag>
      <description>Location of the first invariant point in tracker coordinates.</description>
      <label>Invariant Point 1</label>
      <default>0,0,0</default>
      <channel>input</channel>
    </point>
    <point>
      <name>invariantPoint2</name>
      <longflag>invariantPoint2</longflag>
      <description>Location of the second invariant point in tracker coordinates.</description>
      <label>Invariant Point 2</label>
      <default>-32767,-32767,-32767</default>
      <channel>input</channel>
    </point>
    <point>
      <name>invariantPoint3</name>
      <longflag>invariantPoint3</longflag>
      <description>Location of the third invariant point in tracker coordinates.</description>
      <label>Invariant Point 3</label>
      <default>-32767,-32767,-32767</default>
      <channel>input</channel>
    </point>
    <file fileExtensions=".txt,.mat,.4x4">
      <name>initialGuess</name>
      <longflag>initialGuess</longflag>
      <description>Guess of calibration transformation, stored as a 4x4 matrix.</description>
      <label>Initial Guess</label>
      <channel>input</channel>
    </file>
  </parameters>

</executable>
