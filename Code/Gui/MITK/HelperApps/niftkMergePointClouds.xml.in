<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Laparoscopic Demo</category>
  <title>Merge Point Clouds</title>
  <description><![CDATA[Merges separate point clouds into one.]]></description>
  <version>@NIFTK_VERSION_STRING@</version>
  <documentation-url>http://cmic.cs.ucl.ac.uk/platform/niftk/current/html/index.html</documentation-url>
  <license>@NIFTK_COPYRIGHT@ @NIFTK_LICENSE_SHORT_STRING@</license>
  <contributor>Johannes Totz</contributor>
  <acknowledgements><![CDATA[]]></acknowledgements>
  <parameters>
    <label>IO</label>
    <description><![CDATA[Input/output parameters]]></description>
    
    <directory>
      <name>pointCloudDirectory</name>
      <longflag>pointcloudsdir</longflag>
      <description>Directory containing the .mps files to merge.</description>
      <label>Directory</label>
    </directory>
 
    <file fileExtensions=".mps">
      <name>output</name>
      <longflag>output</longflag>
      <description>Output file for the merged point cloud.</description>
      <label>Output file for the merged point cloud</label>
      <default>merged.mps</default>
      <channel>output</channel>
    </file>
  </parameters>
</executable>
