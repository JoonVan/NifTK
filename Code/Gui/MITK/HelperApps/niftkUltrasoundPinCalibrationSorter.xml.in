<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Laparoscopic Demo</category>
  <title>Invariant Point Sorter</title>
  <description><![CDATA[Sorts data for Ultrasound Pin Calibration]]></description>
  <version>@NIFTK_VERSION_STRING@</version>
  <documentation-url>http://cmic.cs.ucl.ac.uk/platform/niftk/current/html/index.html</documentation-url>
  <license>@NIFTK_COPYRIGHT@ @NIFTK_LICENSE_SHORT_STRING@</license>
  <contributor>Matt Clarkson</contributor>
  <acknowledgements><![CDATA[]]></acknowledgements>

  <parameters>
    <label>IO</label>
    <description><![CDATA[Input/output parameters]]></description>
    <directory>
      <name>inputMatrixDirectory</name>
      <longflag>inputMatrixDirectory</longflag>
      <description>Directory containing 4x4 tracking matrices in plain text files.</description>
      <label>Input Matrix Directory</label>
    </directory>
    <directory>
      <name>inputImageDirectory</name>
      <longflag>inputImageDirectory</longflag>
      <description>Directory containing ultrasound images.</description>
      <label>Input Points Directory</label>
    </directory>
    <directory>
      <name>outputMatrixDirectory</name>
      <longflag>outputMatrixDirectory</longflag>
      <description>Directory to write selected 4x4 tracking matrices in plain text files.</description>
      <label>Output Matrix Directory</label>
    </directory>
    <directory>
      <name>outputPointDirectory</name>
      <longflag>outputPointDirectory</longflag>
      <description>Directory to write selected 2D pin locations.</description>
      <label>Output Points Directory</label>
    </directory>
    <integer>
      <name>timingTolerance</name>
      <longflag>timingTolerance</longflag>
      <description>The maximum timing error in  milliseconds</description>
      <label>The maximum timing error in millisecond</label>
      <default>40</default>
    </integer>

  </parameters>

</executable>
