<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

  <extension point="org.blueberry.osgi.applications">
    <application id="uk.ac.ucl.cmic.gui.qt.niftyview">
      <run class="QmitkNiftyViewApplication"/>
    </application>
  </extension>

  <extension point="org.blueberry.ui.perspectives">
    <perspective
      id="uk.ac.ucl.cmic.gui.qt.niftyview.igiperspective"
      name="IGI Perspective"
      class="QmitkNiftyViewIGIPerspective"
	  icon="resources/icon_cmic.xpm">
    </perspective>
  </extension>

  <extension point="org.blueberry.ui.perspectives">
    <perspective
      id="uk.ac.ucl.cmic.gui.qt.niftyview.midasperspective"
      name="MIDAS Perspective"
      class="QmitkNiftyViewMIDASPerspective"
    icon="resources/icon_ion.xpm">
    </perspective>
  </extension>

  <extension point="org.blueberry.ui.preferencePages">
    <page id="uk.ac.ucl.cmic.gui.qt.niftyview.NiftyViewPreferencePage" name="Application Preferences - NiftyView" class="QmitkNiftyViewApplicationPreferencePage">
      <keywordreference id="uk.ac.ucl.cmic.gui.qt.niftyview.NiftyViewPreferencePageKeywords"></keywordreference>
    </page>
  </extension>

</plugin>
