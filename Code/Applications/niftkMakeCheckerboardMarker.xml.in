<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Laparoscopic Demo</category>
  <title>Make Checkerboard Marker Image</title>
  <description><![CDATA[Generates a 2D image containing a checkerboard calibration pattern.]]></description>
  <version>@NIFTK_VERSION_STRING@</version>
  <documentation-url>http://cmic.cs.ucl.ac.uk/platform/niftk/current/html/index.html</documentation-url>
  <license>@NIFTK_COPYRIGHT@ @NIFTK_LICENSE_SHORT_STRING@</license>
  <contributor>Matt Clarkson.</contributor>
  <acknowledgements><![CDATA[]]></acknowledgements>
  <parameters>
    <label>IO</label>
    <description><![CDATA[Input/output parameters]]></description>
    <image fileExtensions="*.png">
      <name>output</name>
      <longflag>output</longflag>
      <description>Output image</description>
      <label>Output image</label>
      <channel>output</channel>
    </image>
  </parameters>
  <parameters>
    <label>Mandatory Parameters</label>
    <description><![CDATA[Mandatory Parameters]]></description>  
    <integer>
      <name>width</name>
      <longflag>width</longflag>
      <description>Width in pixels</description>
      <label>Width</label>
      <default>1500</default>
      <constraints>
        <minimum>100</minimum>
        <maximum>10000</maximum>
        <step>1</step>
      </constraints>
    </integer>
    <integer>
      <name>height</name>
      <longflag>height</longflag>
      <description>Height in pixels</description>
      <label>Height</label>
      <default>1300</default>
      <constraints>
        <minimum>100</minimum>
        <maximum>10000</maximum>
        <step>1</step>
      </constraints>
    </integer>
    <integer>
      <name>squaresAlongWidth</name>
      <longflag>squaresAlongWidth</longflag>
      <description>Number of squares along the width</description>
      <label>Squares along Width</label>
      <default>15</default>
      <constraints>
        <minimum>3</minimum>
        <maximum>1000</maximum>
        <step>1</step>
      </constraints>
    </integer>
    <integer>
      <name>squaresAlongHeight</name>
      <longflag>squaresAlongHeight</longflag>
      <description>Number of squares along the height</description>
      <label>Squares along Height</label>
      <default>13</default>
      <constraints>
        <minimum>3</minimum>
        <maximum>1000</maximum>
        <step>1</step>
      </constraints>
    </integer>        
    <float>
      <name>multiplierWidth</name>
      <longflag>multiplierWidth</longflag>
      <description>Multiplier along the width</description>
      <label>Multiplier along Width</label>
      <default>1</default>
      <constraints>
        <minimum>1</minimum>
        <maximum>2</maximum>
        <step>0.1</step>
      </constraints>
    </float>
    <float>
      <name>multiplierHeight</name>
      <longflag>multiplierHeight</longflag>
      <description>Multiplier along the height</description>
      <label>Multiplier along Height</label>
      <default>1</default>
      <constraints>
        <minimum>1</minimum>
        <maximum>2</maximum>
        <step>0.1</step>
      </constraints>
    </float>    
  </parameters>
</executable>
