<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Laparoscopic Demo</category>
  <title>Make Laparoscopic Ultrasound Probe Model</title>
  <description><![CDATA[Generates a VTK model to match the ARTag board created by aruco_create_board.]]></description>
  <version>@NIFTK_VERSION_STRING@</version>
  <documentation-url>http://cmic.cs.ucl.ac.uk/platform/niftk/current/html/index.html</documentation-url>
  <license>@NIFTK_COPYRIGHT@ @NIFTK_LICENSE_SHORT_STRING@</license>
  <contributor>Matt Clarkson.</contributor>
  <acknowledgements><![CDATA[]]></acknowledgements>
  
  <parameters>
    <label>IO</label>
    <description><![CDATA[Output parameters]]></description>
    <file fileExtensions="*.vtk">
      <name>outputModel</name>
      <longflag>outputModel</longflag>
      <description>Output VTK file (vtkPolyData).</description>
      <label>Output Model</label>
      <channel>output</channel>
    </file>
  </parameters>
  
  <parameters>
    <label>Probe Parameters</label>
    <description><![CDATA[Parameters for probe geometry]]></description>  
    <float>
      <name>diameter</name>
      <longflag>diameter</longflag>
      <description>The diameter of the probe (mm).</description>
      <label>Probe Diameter</label>
      <default>10</default>
      <constraints>
        <minimum>1</minimum>
        <maximum>99</maximum>
        <step>0.1</step>
      </constraints>
    </float>
    <float>
      <name>length</name>
      <longflag>length</longflag>
      <description>The length of the probe (mm).</description>
      <label>Probe Length</label>
      <default>63</default>
      <constraints>
        <minimum>1</minimum>
        <maximum>99</maximum>
        <step>0.1</step>
      </constraints>
    </float>    
    <float>
      <name>surface</name>
      <longflag>surface</longflag>
      <description>The width of the flat probe sensor (mm).</description>
      <label>Probe Sensor</label>
      <default>8</default>
      <constraints>
        <minimum>1</minimum>
        <maximum>99</maximum>
        <step>0.1</step>
      </constraints>
    </float>
  </parameters>

  <parameters>
    <label>Grid Parameters</label>
    <description><![CDATA[Parameters for grid pattern]]></description>
    <integer>
      <name>numberSquares</name>
      <longflag>numberSquares</longflag>
      <description>The number of squares along the probe.</description>
      <label>Number Squares</label>
      <default>9</default>
      <constraints>
        <minimum>2</minimum>
        <maximum>20</maximum>
        <step>1</step>
      </constraints>
    </integer>      
    <integer>
      <name>dpi</name>
      <longflag>dpi</longflag>
      <description>The number of dots per inch to print at</description>
      <label>DPI</label>
      <default>300</default>
      <constraints>
        <minimum>1</minimum>
        <maximum>1000</maximum>
        <step>1</step>
      </constraints>
    </integer>      
  </parameters>
</executable>
