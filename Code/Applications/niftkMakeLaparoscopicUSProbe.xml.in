<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Laparoscopic Demo</category>
  <title>Make Probe</title>
  <description><![CDATA[Generates a VTK mesh to represent the tip of an articulated ultrasound probe.]]></description>
  <version>@NIFTK_VERSION_STRING@</version>
  <documentation-url>http://cmic.cs.ucl.ac.uk/platform/niftk/current/html/index.html</documentation-url>
  <license>@NIFTK_COPYRIGHT@ @NIFTK_LICENSE_SHORT_STRING@</license>
  <contributor>Matt Clarkson.</contributor>
  <acknowledgements><![CDATA[]]></acknowledgements>
  <parameters>
    <label>IO</label>
    <description><![CDATA[Input/output parameters]]></description>
    <file fileExtensions="*.vtk">
      <name>outputVTKSurface</name>
      <longflag>output</longflag>
      <description>Output VTK file (vtkPolyData)</description>
      <label>Output file</label>
      <default>probe.vtk</default>
      <channel>output</channel>
    </file>
  </parameters>
  <parameters>
    <label>Dimensions</label>
    <description><![CDATA[Probe dimensions]]></description>  
    <float>
      <name>length</name>
      <longflag>length</longflag>
      <description>The length of the probe.</description>
      <label>Length</label>
      <default>63</default>
      <constraints>
        <minimum>1</minimum>
        <maximum>99</maximum>
        <step>0.1</step>
      </constraints>
    </float>
    <float>
      <name>radius</name>
      <longflag>radius</longflag>
      <description>The radius of the probe.</description>
      <label>Radius</label>
      <default>10</default>
      <constraints>
        <minimum>1</minimum>
        <maximum>99</maximum>
        <step>0.1</step>
      </constraints>
    </float>
    <integer>
      <name>resolution</name>
      <longflag>resolution</longflag>
      <description>The number of facets to describe the cylinder.</description>
      <label>Resolution</label>
      <default>36</default>
      <constraints>
        <minimum>6</minimum>
        <maximum>1000</maximum>
      </constraints>
    </integer>      
  </parameters>
</executable>
