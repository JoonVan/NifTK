###############################################################################
# This file sets up include directories, link directories, and
# compiler settings for a project to compile against NifTK.
# It should not be included directly, but rather through the
# NifTK_USE_FILE setting obtained from NifTKConfig.cmake.
###############################################################################

IF(NifTK_BUILD_SETTINGS_FILE AND NOT SKIP_NifTK_BUILD_SETTINGS_FILE)
  INCLUDE(${CMAKE_ROOT}/Modules/CMakeImportBuildSettings.cmake)
  CMAKE_IMPORT_BUILD_SETTINGS(${NifTK_BUILD_SETTINGS_FILE})
ENDIF()

# Add compiler flags needed to use NifTK.
SET(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} ${NifTK_REQUIRED_C_FLAGS}")
SET(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} ${NifTK_REQUIRED_CXX_FLAGS}")
SET(CMAKE_EXE_LINKER_FLAGS "${CMAKE_EXE_LINKER_FLAGS} ${NifTK_REQUIRED_LINK_FLAGS}")
SET(CMAKE_SHARED_LINKER_FLAGS "${CMAKE_SHARED_LINKER_FLAGS} ${NifTK_REQUIRED_LINK_FLAGS}")
SET(CMAKE_MODULE_LINKER_FLAGS "${CMAKE_MODULE_LINKER_FLAGS} ${NifTK_REQUIRED_LINK_FLAGS}")

# Add include directories needed to use NifTK.
INCLUDE_DIRECTORIES(BEFORE ${NifTK_INCLUDE_DIRS} )

# Add link directories needed to use NifTK.
LINK_DIRECTORIES(${NifTK_LIBRARY_DIRS})
