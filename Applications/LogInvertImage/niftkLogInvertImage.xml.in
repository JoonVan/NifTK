<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Image Operators</category>
  <title>Log-Invert Image</title>
  <description><![CDATA[Inverts an image preserving the maximum and minimum intensities and computes the logarithm of the result.]]></description>
  <version>@NIFTK_VERSION_STRING@</version>
  <documentation-url>http://cmic.cs.ucl.ac.uk/platform/niftk/current/html/index.html</documentation-url>
  <license>@NIFTK_COPYRIGHT@ @NIFTK_LICENSE_SHORT_STRING@</license>
  <contributor>John Hipwell. </contributor>
  <acknowledgements><![CDATA[]]></acknowledgements>
  <parameters>
    <label>IO</label>
    <description><![CDATA[Input/output parameters]]></description>
    <image>
      <name>inputImage</name>
      <flag>i</flag>
      <longflag>inputImage</longflag>
      <description>Input image</description>
      <label>Input image</label>
      <channel>input</channel>
    </image>

    <image>
      <name>outputImage</name>
      <flag>o</flag>
      <longflag>outputImage</longflag>
      <description>Output image</description>      
      <label>Output image</label>
      <default>outputInverted.nii.gz</default>
      <channel>output</channel>
    </image>

    <boolean>
      <name>flgPreserveImageRange</name>
      <longflag>preserveRange</longflag>
      <description>Rescale the image to retain the same range as the input.</description>
      <label>Preserve Image Range?</label>
    </boolean>
  </parameters>
</executable>
