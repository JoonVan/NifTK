<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Tracking</category>
  <title>Atracsys Client</title>
  <description><![CDATA[Test harness to connect to Atracsys Fusion Track 500.]]></description>
  <version>@NIFTK_VERSION_STRING@</version>
  <documentation-url>http://cmic.cs.ucl.ac.uk/platform/niftk/current/html/index.html</documentation-url>
  <license>@NIFTK_COPYRIGHT@ @NIFTK_LICENSE_SHORT_STRING@</license>
  <contributor>Matt Clarkson</contributor>
  <acknowledgements><![CDATA[]]></acknowledgements>

  <parameters>
    <label>IO</label>
    <description><![CDATA[Input/output parameters]]></description>

    <directory>
      <name>outputDir</name>
      <flag>o</flag>
      <longflag>outputDir</longflag>
      <description>A directory to write data to.</description>
      <label>Output Directory</label>
      <channel>input</channel>
    </directory>
    
  </parameters>

  <parameters>
    <label>Optional Parameters</label>
    <description><![CDATA[Optional Parameters]]></description>

    <file fileExtensions=".IGTToolStorage">
      <name>toolStorage</name>
      <flag>t</flag>
      <longflag>toolStorage</longflag>
      <description>MITK Tool Storage file</description>
      <label>Tool Storage</label>
      <channel>input</channel>
    </file>

    <integer>
      <name>duration</name>
      <flag>d</flag>
      <longflag>duration</longflag>
      <description>Number of seconds to sample</description>
      <label>Duration</label>
      <default>-1</default>
    </integer>

    <integer>
      <name>number</name>
      <flag>n</flag>
      <longflag>number</longflag>
      <description>Number of samples to grab</description>
      <label>Number of Samples</label>
      <default>-1</default>
    </integer>
    
  </parameters>

</executable>
