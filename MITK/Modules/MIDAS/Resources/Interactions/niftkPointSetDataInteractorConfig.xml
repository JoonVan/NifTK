<config>
  <!--   Set a maximal number of points here:
  <param name="MaxPoints" value="4"/>
  -->
  <event_variant class="InternalEvent" name="EnoughPoints">
    <attribute name="SignalName" value="MaxNumberOfPoints"/>
  </event_variant>
  <event_variant class="InternalEvent" name="NotEnoughPoints">
    <attribute name="SignalName" value="haslessthen3points"/>
  </event_variant>

  <event_variant class="InteractionKeyEvent" name="Abort">
    <attribute name="Key" value="Escape"/>
  </event_variant>

  <event_variant class="MouseMoveEvent" name="MovingAround"/>

  <event_variant class="MouseMoveEvent" name="MovingAroundWithShift">
    <attribute name="Modifiers" value="shift"/>
  </event_variant>

  <event_variant class="MousePressEvent" name="StartAddingPoint">
    <attribute name="EventButton" value="RightMouseButton"/>
  </event_variant>
  <event_variant class="MouseMoveEvent" name="KeepAddingPoint">
    <attribute name="ButtonState" value="RightMouseButton"/>
  </event_variant>
  <event_variant class="MouseReleaseEvent" name="StopAddingPoint">
    <attribute name="EventButton" value="RightMouseButton"/>
  </event_variant>

  <event_variant class="MousePressEvent" name="StartMovingPoint">
    <attribute name="EventButton" value="LeftMouseButton"/>
  </event_variant>
  <event_variant class="MouseMoveEvent" name="KeepMovingPoint">
    <attribute name="ButtonState" value="LeftMouseButton"/>
  </event_variant>
  <event_variant class="MouseReleaseEvent" name="StopMovingPoint">
    <attribute name="EventButton" value="LeftMouseButton"/>
  </event_variant>

  <event_variant class="MousePressEvent" name="StartRemovingPoints">
    <attribute name="EventButton" value="MiddleMouseButton"/>
  </event_variant>
  <event_variant class="MouseMoveEvent" name="KeepRemovingPoints">
    <attribute name="ButtonState" value="MiddleMouseButton"/>
  </event_variant>
  <event_variant class="MouseReleaseEvent" name="StopRemovingPoints">
    <attribute name="EventButton" value="MiddleMouseButton"/>
  </event_variant>

  <event_variant class="MousePressEvent" name="StartRemovingPointsWithShift">
    <attribute name="EventButton" value="LeftMouseButton"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>
  <event_variant class="MouseMoveEvent" name="KeepRemovingPointsWithShift">
    <attribute name="ButtonState" value="LeftMouseButton"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>
  <event_variant class="MouseReleaseEvent" name="StopRemovingPointsWithShift">
    <attribute name="EventButton" value="LeftMouseButton"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>

</config>
