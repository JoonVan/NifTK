            <action name="selectViewer" index="0"/>
        </transition>
        <transition event_class="InteractionKeyEvent" event_variant="SelectSecondViewer" target="start">
            <action name="selectViewer" index="1"/>
        </transition>
        <transition event_class="InteractionKeyEvent" event_variant="SelectThirdViewer" target="start">
            <action name="selectViewer" index="2"/>
        </transition>
        <transition event_class="InteractionKeyEvent" event_variant="SelectFourthViewer" target="start">
            <action name="selectViewer" index="3"/>
        </transition>
        <transition event_class="InteractionKeyEvent" event_variant="SelectFifthViewer" target="start">
            <action name="selectViewer" index="4"/>
        </transition>
        <transition event_class="InteractionKeyEvent" event_variant="SelectSixthViewer" target="start">
            <action name="selectViewer" index="5"/>
        </transition>
        <transition event_class="InteractionKeyEvent" event_variant="SelectSeventhViewer" target="start">
