<!--
* - MITK : The original interaction scheme
*   - middle mouse button : panning
*   - right mouse button  : zooming
*   - wheel               : scrolling
-->
<config>
  <!-- Zoom sensitivity -->
  <param name="zoomFactor" value="5"/>
  <!-- Zoom either by moving mouse leftright or updown -->
  <param name="zoomDirection" value="updown"/>
  <!-- react to an event, even tough is was already processed by a DataInteractor-->
  <param name="alwaysReact" value="false"/>

  <!-- Select position -->
  <event_variant class="MousePressEvent" name="StartSelectingPosition">
    <attribute name="EventButton" value="LeftMouseButton"/>
  </event_variant>
  <event_variant class="MouseMoveEvent" name="SelectingPosition">
    <attribute name="ButtonState" value="LeftMouseButton"/>
  </event_variant>
  <event_variant class="MouseReleaseEvent" name="StopSelectingPosition">
    <attribute name="EventButton" value="LeftMouseButton"/>
  </event_variant>

  <!-- Moving -->
  <event_variant class="MousePressEvent" name="StartPanning">
    <attribute name="EventButton" value="MiddleMouseButton"/>
  </event_variant>
  <event_variant class="MouseMoveEvent" name="Panning">
    <attribute name="ButtonState" value="MiddleMouseButton"/>
  </event_variant>
  <event_variant class="MouseReleaseEvent" name="StopPanning">
    <attribute name="EventButton" value="MiddleMouseButton"/>
  </event_variant>

  <event_variant class="MousePressEvent" name="StartPanning">
    <attribute name="EventButton" value="LeftMouseButton"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>
  <event_variant class="MouseMoveEvent" name="Panning">
    <attribute name="ButtonState" value="LeftMouseButton"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>
  <event_variant class="MouseReleaseEvent" name="StopPanning">
    <attribute name="EventButton" value="LeftMouseButton"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>

  <!-- Zooming -->
  <event_variant class="MousePressEvent" name="StartZooming">
    <attribute name="EventButton" value="RightMouseButton"/>
  </event_variant>
   <event_variant class="MouseMoveEvent" name="Zooming">
    <attribute name="ButtonState" value="RightMouseButton"/>
  </event_variant>
  <event_variant class="MouseReleaseEvent" name="StopZooming">
    <attribute name="EventButton" value="RightMouseButton"/>
  </event_variant>

  <!-- Select voxel -->
  <event_variant class="InteractionKeyEvent" name="SelectVoxelOnLeft">
    <attribute name="Key" value="ArrowLeft"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectVoxelOnRight">
    <attribute name="Key" value="ArrowRight"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectVoxelAbove">
    <attribute name="Key" value="ArrowUp"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectVoxelBelow">
    <attribute name="Key" value="ArrowDown"/>
  </event_variant>

  <!-- Pan by keys -->
  <event_variant class="InteractionKeyEvent" name="PanLeft">
    <attribute name="Key" value="ArrowLeft"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="PanRight">
    <attribute name="Key" value="ArrowRight"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="PanUp">
    <attribute name="Key" value="ArrowUp"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="PanDown">
    <attribute name="Key" value="ArrowDown"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>

  <!-- Zoom by keys -->
  <event_variant class="InteractionKeyEvent" name="ZoomIn">
    <attribute name="Key" value="ArrowUp"/>
    <attribute name="Modifiers" value="ctrl"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="ZoomOut">
    <attribute name="Key" value="ArrowDown"/>
    <attribute name="Modifiers" value="ctrl"/>
  </event_variant>

  <!-- Recentre -->
  <event_variant class="InteractionKeyEvent" name="Recentre">
    <attribute name="Key" value="R"/>
    <attribute name="Modifiers" value="ctrl"/>
  </event_variant>

  <!-- Scrolling through slices -->
  <event_variant class="InteractionKeyEvent" name="SelectPreviousSlice">
    <attribute name="Key" value="A"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectNextSlice">
    <attribute name="Key" value="Z"/>
  </event_variant>
  <event_variant class="MouseWheelEvent" name="SelectPreviousSlice">
    <attribute name="ScrollDirection" value="up"/>
  </event_variant>
  <event_variant class="MouseWheelEvent" name="SelectNextSlice">
    <attribute name="ScrollDirection" value="down"/>
  </event_variant>

  <!-- Scrolling through time steps -->
  <event_variant class="InteractionKeyEvent" name="SelectPreviousTimeStep">
    <attribute name="Key" value="A"/>
    <attribute name="Modifiers" value="alt"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectNextTimeStep">
    <attribute name="Key" value="Z"/>
    <attribute name="Modifiers" value="alt"/>
  </event_variant>
  <event_variant class="MouseWheelEvent" name="SelectPreviousTimeStep">
    <attribute name="ScrollDirection" value="up"/>
    <attribute name="Modifiers" value="alt"/>
  </event_variant>
  <event_variant class="MouseWheelEvent" name="SelectNextTimeStep">
    <attribute name="ScrollDirection" value="down"/>
    <attribute name="Modifiers" value="alt"/>
  </event_variant>

  <!-- Autoscroll through slices -->
  <event_variant class="InteractionKeyEvent" name="StartScrollingThroughSlicesBackwardsByKey">
    <attribute name="Key" value="A"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="StartScrollingThroughSlicesForwardsByKey">
    <attribute name="Key" value="Z"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>
  <event_variant class="MouseWheelEvent" name="StartScrollingThroughSlicesBackwardsByMouse">
    <attribute name="ScrollDirection" value="up"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>
  <event_variant class="MouseWheelEvent" name="StartScrollingThroughSlicesForwardsByMouse">
    <attribute name="ScrollDirection" value="down"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>

  <!-- Autoscroll through time steps -->
  <event_variant class="InteractionKeyEvent" name="StartScrollingThroughTimeStepsBackwardsByKey">
    <attribute name="Key" value="A"/>
    <attribute name="Modifiers" value="shift,alt"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="StartScrollingThroughTimeStepsForwardsByKey">
    <attribute name="Key" value="Z"/>
    <attribute name="Modifiers" value="shift,alt"/>
  </event_variant>
  <event_variant class="MouseWheelEvent" name="StartScrollingThroughTimeStepsBackwardsByMouse">
    <attribute name="ScrollDirection" value="up"/>
    <attribute name="Modifiers" value="shift,alt"/>
  </event_variant>
  <event_variant class="MouseWheelEvent" name="StartScrollingThroughTimeStepsForwardsByMouse">
    <attribute name="ScrollDirection" value="down"/>
    <attribute name="Modifiers" value="shift,alt"/>
  </event_variant>

  <!-- Stop autoscroll -->
  <event_variant class="InteractionKeyEvent" name="StopScrolling">
    <attribute name="Key" value="Escape"/>
  </event_variant>

  <!-- Switch window layout -->
  <event_variant class="InteractionKeyEvent" name="AxialWindowLayout">
    <attribute name="Key" value="Q"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SagittalWindowLayout">
    <attribute name="Key" value="W"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="CoronalWindowLayout">
    <attribute name="Key" value="E"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="3DWindowLayout">
    <attribute name="Key" value="R"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="MultiWindowLayout">
    <attribute name="Key" value="T"/>
  </event_variant>
  <event_variant class="MouseDoubleClickEvent" name="ToggleMultiWindowLayout">
    <attribute name="EventButton" value="LeftMouseButton"/>
  </event_variant>

  <!-- Select window -->
  <event_variant class="InteractionKeyEvent" name="SelectAxialWindow">
    <attribute name="Key" value="Q"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectSagittalWindow">
    <attribute name="Key" value="W"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectCoronalWindow">
    <attribute name="Key" value="E"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="Select3DWindow">
    <attribute name="Key" value="R"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectPreviousWindow">
    <attribute name="Key" value="&lt;"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectNextWindow">
    <attribute name="Key" value="&gt;"/>
    <attribute name="Modifiers" value="shift"/>
  </event_variant>

  <!-- Select viewer -->
  <event_variant class="InteractionKeyEvent" name="SelectPreviousViewer">
    <attribute name="Key" value=","/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectNextViewer">
    <attribute name="Key" value="."/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectViewer0">
    <attribute name="Key" value="1"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectViewer1">
    <attribute name="Key" value="2"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectViewer2">
    <attribute name="Key" value="3"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectViewer3">
    <attribute name="Key" value="4"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectViewer4">
    <attribute name="Key" value="5"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectViewer5">
    <attribute name="Key" value="6"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectViewer6">
    <attribute name="Key" value="7"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectViewer7">
    <attribute name="Key" value="8"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectViewer8">
    <attribute name="Key" value="9"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="SelectViewer9">
    <attribute name="Key" value="0"/>
  </event_variant>

  <!-- Toggle cursor visibility -->
  <event_variant class="InteractionKeyEvent" name="ToggleCursorVisibility">
    <attribute name="Key" value="X"/>
  </event_variant>

  <!-- Toggle direction annotations -->
  <event_variant class="InteractionKeyEvent" name="ToggleDirectionAnnotations">
    <attribute name="Key" value="D"/>
  </event_variant>

  <!-- Toggle position annotation -->
  <event_variant class="InteractionKeyEvent" name="TogglePositionAnnotation">
    <attribute name="Key" value="P"/>
  </event_variant>

  <!-- Toggle intensity annotation -->
  <event_variant class="InteractionKeyEvent" name="ToggleIntensityAnnotation">
    <attribute name="Key" value="I"/>
  </event_variant>

  <!-- Toggle property annotation -->
  <event_variant class="InteractionKeyEvent" name="TogglePropertyAnnotation">
    <attribute name="Key" value="N"/>
  </event_variant>

</config>
